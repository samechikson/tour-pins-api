{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "types": ["jest"],
    "lib": ["esnext.asynciterable"],
    "skipLibCheck": true,
    "maxNodeModuleJsDepth": 0
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules/**"]
}
